<?xml version="1.0" encoding="UTF-8"?>

<!--

This logging config was written with the assistance of a LLM.

In order of increasing severity:
	1.	TRACE: Finest-grained informational events useful for debugging.
	2.	DEBUG: Informational events useful for debugging.
	3.	INFO: General informational messages.
	4.	WARN: Potentially harmful situations.
	5.	ERROR: Error events that might still allow the application to continue running.

-->

<configuration>

    <!-- Define a property for the log file path with node identifier -->
    <property name="LOG_FILE" value="logs/app.log"/>

    <!-- File Appender Configuration -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_FILE}</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Asynchronous Appender Configuration -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE" />
        <queueSize>500</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <neverBlock>true</neverBlock>
    </appender>

    <!-- Root Logger Configuration -->
    <root level="TRACE">
        <appender-ref ref="ASYNC_FILE" />
    </root>

</configuration>